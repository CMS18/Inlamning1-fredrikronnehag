@model TransactionViewModel

<div class="container">
    <div class="row">
        <form asp-action="Deposit" asp-controller="Transaction" class="col-6">
            <label>
                Account #
                <input class="form-control" asp-for="@Model.Deposit.AccountID" type="text" />
            </label>
            <label>
                Amount
                <input class="form-control" asp-for="@Model.Deposit.Amount" />
            </label>
            <div class="form-group">
                <button class="btn btn-primary">Deposit</button>
            </div>
        </form>

        <form asp-action="Withdraw" asp-controller="Transaction" class="col-6">
            <label>
                Account #
                <input class="form-control" asp-for="@Model.Withdraw.AccountID" type="text" />
            </label>
            <label>
                Amount
                <input class="form-control" asp-for="@Model.Withdraw.Amount" />
            </label>
            <div class="form-group">
                <button class="btn btn-danger">Withdraw</button>
            </div>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @TempData["Error"]
    </div>
}




